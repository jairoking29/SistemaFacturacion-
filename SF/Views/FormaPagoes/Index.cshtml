@model IEnumerable<SF.Models.FormaPago>

@{
    ViewBag.Title = "Index";
}

<h2>Formas de pago</h2>

<p>
    @Html.ActionLink("Crear una nueva forma de pago", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_FormPago }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_FormPago }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_FormPago })
        </td>
    </tr>
}

</table>
