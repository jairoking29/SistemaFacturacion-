@model IEnumerable<SF.Models.Facturacion>

@{
    ViewBag.Title = "Index";
}

<h2>Facturación</h2>

<p>
    @Html.ActionLink("Crear una nueva factura", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articulos.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articulos1.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.nombreComercial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendedores1.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioUnitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Articulos.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Articulos1.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clientes.nombreComercial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendedores1.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Factura }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Factura }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Factura })
        </td>
    </tr>
}

</table>
