@model IEnumerable<SF.Models.Articulos>

@{
    ViewBag.Title = "Index";
}

<h2>Artículos</h2>

<p>
    @Html.ActionLink("Agregar un nuevo articulo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioUnitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Articulo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Articulo }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id_Articulo })
        </td>
    </tr>
}

</table>
